{
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.anthropic.com)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "tool_name:Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/security-guard.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/log-tool-use.js"
          },
          {
            "type": "command", 
            "command": "node ~/.claude/hooks/audit-logger.js"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/notify.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/notify.js"
          }
        ]
      }
    ]
  }
}